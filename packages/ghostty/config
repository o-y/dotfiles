###
### THEME
###
theme = "dark_master"

###
### MACOS
###

# https://github.com/ghostty-org/ghostty/discussions/3207
# Allows alt to be picked up by zellij on macOS
keybind = alt+left=unbind
keybind = alt+right=unbind
macos-option-as-alt = true

###
### ZELLIJ KEYBINDS
###

# Toggle pane to floating or embed
# PUS E000
keybind = ctrl+shift+w=text:

# Toggle view floating panes
# PUS E002
keybind = ctrl+shift+q=text:

# Move between tabs
keybind = ctrl+1=text:ctrl1!

keybind = cmd+q=text:hi