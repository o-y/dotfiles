vendors = official

$standard-margin = 13px

$light_primary = #f5f6fa
$dark_primary = #1e1e2e
$dark_secondary = lighten(#1e1e2e, 10%)

$blue = #8db2f2
$purple = #a29dfd
$violet = #7f7dfe
$pink = #fa98ef

//=== STANDARD
*
  font-family: Material Design Icons, JetBrainsMono Nerd Font
  font-size: 17px

.struct-right
  margin-right: 35px

//=== ANIMATIONS
@keyframes CustomMediaAnimation
  0%
    background-position: 0% 41%
  50%
    background-position: 100% 60%
  100%
    background-position: 0% 41%

//=== WAYBAR
#waybar
  background-color: $dark_primary
  transition-property: background-color
  transition-duration: 0.5s
  border-radius: 18px
  opacity: 0.95

//=== WORKSPACES
#workspaces
  $width = 20px
  $spacing = 6px

  button
    all: initial
    border-radius: 13px
    padding: $spacing $width
    margin: $standard-margin $spacing
    background-color: $dark_primary
    color: $blue

    &:first-child
      margin-left: $standard-margin

    &.active
      color: $dark_primary
      background-color: $blue

//=== CLOCK
#clock
  @extend .struct-right
  color: $pink

//=== CLOCK
#custom-media
  padding-left: $standard-margin * 4
  padding-right: @padding-left
  margin-top: $standard-margin
  margin-bottom: @margin-top
  border-radius: 80px
  font-weight: bold
  color: $dark_primary

  &.playing
    background: linear-gradient(45deg, #11998e, #38ef7d, #00b09b, #96c93d, #0f9b0f)
    // background: linear-gradient(45deg, rgb(190, 224, 252), rgb(116, 202, 249), rgb(111, 164, 254), rgb(162, 157, 253), rgb(149, 130, 254), rgb(127, 125, 254), rgb(183, 140, 249), rgb(247, 184, 236), rgb(250, 152, 239))
    background-size: 600% 600%
    animation: CustomMediaAnimation 35s ease infinite

  &.stopped
    background: $dark_secondary
    color: $light_primary