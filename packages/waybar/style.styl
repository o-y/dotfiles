vendors = official

$standard-margin = 13px

$light_primary = #f5f6fa
$dark_primary = #1e1e2e
$dark_secondary = lighten(#1e1e2e, 10%)

$blue = #D3D0C9
$purple = #a29dfd
$violet = #7f7dfe
$pink = #fa98ef
$turquoise = #1abc9c

//=== STANDARD
*
  font-family: Material Design Icons, JetBrainsMono Nerd Font
  font-size: 17px

.struct-right
  margin-right: 35px

//=== ANIMATIONS
@keyframes CustomMediaAnimation
  0%
    background-position: 0% 41%
  50%
    background-position: 100% 60%
  100%
    background-position: 0% 41%

//=== WAYBAR
#waybar
  background-color: $dark_primary
  transition-property: background-color
  transition-duration: 0.5s
  border-radius: 18px
  opacity: 0.95

//=== WORKSPACES
#workspaces
  $width = 20px
  $spacing = 6px

  button
    all: initial
    border-radius: 13px
    padding: $spacing $width
    margin: $standard-margin $spacing
    background-color: $dark_primary
    color: $blue
    transition: background-color 0.35s ease-in-out, color 0.20s ease-in-out

    &:first-child
      margin-left: $standard-margin

    &.active
      color: $dark_primary
      background-color: $blue

//=== CLOCK
#clock
  @extend .struct-right
  color: $pink

//=== MEMORY
#memory
  @extend .struct-right
  color: $turquoise

//=== WINDOW NAME
#window
  @extend .struct-right
  color: $blue
  // prevent the window title from touching the music  
  padding-left: 35px

//=== MEDIA
#custom-media
  padding-left: $standard-margin * 4
  padding-right: @padding-left
  margin-top: $standard-margin
  margin-bottom: @margin-top
  border-radius: 80px
  font-weight: bold
  color: $dark_primary
  transition: background 0.45s ease-in-out, color 0.20s ease-in-out

  &.playing
    background: linear-gradient(45deg, #11998e, #38ef7d, #00b09b, #1DB954)
    background-size: 600% 600%
    animation: CustomMediaAnimation 15s ease infinite

  &.stopped
    background: $dark_secondary
    color: $light_primary
