function _ad() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  # Separate 'words' of the current command line
  _arguments -C \
    '1: :->subcmds' \
    '*:: :->args'

  if [[ $state == subcmds ]]; then
    # Offer subcommand completions
    compadd wifi text textc screenshot help
  elif [[ $state == args ]]; then
    case $line[1] in
      wifi) 
        compadd on off 
        ;;
    esac
  fi
}